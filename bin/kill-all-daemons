#!/bin/bash

set -e

source $(dirname $0)/include

function print-usage() {
  if test -n "$1"; then echo $1 1>&2; fi
  echo 1>&2

  echo "Usage: $(basename $0) [options]" 1>&2
  echo "    -h    Print help message" 1>&2
  echo "    -9    kill process with KILL signal" 1>&2
  echo "    -3    kill process with QUIT signal" 1>&2
  echo "    -s    Send given signal (e.g. -s15)" 1>&2
  echo 1>&2
  echo "Default signal is TERM (15)." 1>&2
  echo 1>&2

  log "Exiting"
  exit 1;
}

signal=15

while getopts "h93s:" option; do
  case $option in
    h ) print-usage;;
    9 ) signal=9;;
    3 ) signal=3;;
    s ) signal=$OPTARG;;
    * ) print-usage "Unknown option: $option";;
  esac
done

shift $(($OPTIND - 1))

if test $# -ne 0; then
  print-usage "No arguments are allowed"
fi

if test ! -r $APP_HOME/pid; then
  fatal "$APP_HOME/pid does not exit"
fi

if ls $APP_HOME/pid/*.pid >/dev/null 2>&1; then
  for f in $(ls $APP_HOME/pid/*.pid); do
    name=$(basename $f .pid)
    info "Killing $name"
    $BASEDIR/bin/kill-daemon -s$signal $name
  done
fi
