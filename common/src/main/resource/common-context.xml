<?xml version='1.0' encoding='utf-8'?>

<beans
    xmlns='http://www.springframework.org/schema/beans'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns:c='http://www.springframework.org/schema/c'
    xmlns:p='http://www.springframework.org/schema/p'
    xsi:schemaLocation='
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd'
        >

  <bean
      class='org.springframework.beans.factory.config.PropertyPlaceholderConfigurer'
      p:system-properties-mode-name='SYSTEM_PROPERTIES_MODE_OVERRIDE'
      p:ignore-unresolvable-placeholders='true'
      p:ignore-resource-not-found='true'
      >
    <property name='locations'>
      <list>
        <value>classpath:common.properties</value>
        <value>file://${app.home}/etc/override.properties</value>
        <value>file://${app.home}/etc/local.properties</value>
      </list>
    </property>
  </bean>

  <!-- HTTP Client -->
  <bean
      id="common.http-client"
      class="me.yabble.common.http.client.HttpClientImpl"
      init-method="init"
      destroy-method="shutdown"
      p:max-http-conns="${common.http-client.max-http-conns}"
      p:max-http-conns-per-route="${common.http-client.max-http-conns-per-route}"
      p:socket-timeout-ms="${common.http-client.socket-timeout-ms}"
      p:conn-pool-timeout-ms="${common.http-client.conn-pool-timeout-ms}"
      p:user-agent="${common.http-client.user-agent}"
      />
  <!-- END HTTP Client -->

  <!-- Redis -->
  <bean
      id="common.redis-client"
      class="me.yabble.common.redis.RedisClientImpl"
      c:max-active-connections="${common.redis-client.max-active-connections}"
      c:db="${common.redis.db}"
      p:max-connection-pool-timeout-ms="${common.redis-client.max-connection-pool-timeout-ms}"
      >
    <constructor-arg>
      <bean
          class="redis.clients.jedis.JedisPool"
          destroy-method="destroy"
          c:host="${common.redis.hostname}"
          c:port="${common.redis.port}"
          >
        <constructor-arg name="poolConfig">
          <bean
              class="redis.clients.jedis.JedisPoolConfig"
              p:max-active="${common.redis-client.max-active-connections}"
              p:max-wait="${common.redis-client.max-wait-ms}"
              />
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  <!-- END Redis -->

  <!-- Work queue -->
  <bean
      id="common.work-queue"
      class="me.yabble.common.wq.RedisWorkQueue"
      c:redis-client-ref="common.redis-client"
      />
  <!-- END Work queue -->

  <bean
      id="common.txn-sync"
      class="me.yabble.common.txn.SpringTransactionSynchronization"
      />

</beans>
